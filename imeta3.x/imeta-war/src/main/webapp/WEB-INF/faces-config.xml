<?xml version="1.0" encoding="utf-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>messages</var>
		</resource-bundle>
	</application>

	<factory>
		<exception-handler-factory>com.plywet.imeta.platform.application.PlywetExceptionHandlerFactory</exception-handler-factory>
	</factory>

	<managed-bean>
		<managed-bean-name>preferences</managed-bean-name>
		<managed-bean-class>com.plywet.imeta.platform.manager.PreferencesManager</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

</faces-config>