<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mmtitle_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.plywet.mm.ui.MMImageButton
        android:id="@+id/title_btn4"
        style="@style/MMTitleButton"
        android:background="@drawable/mm_title_btn_right"
        android:focusable="true" />

    <LinearLayout
        android:id="@+id/title_to_top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:shadowColor="#ff404040"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#ffffffff"
            android:textSize="19.0dip" />
    </LinearLayout>

    <ImageView
        android:id="@+id/title_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mm_title_btn_phone"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/title_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat_mute_notify"
        android:visibility="gone" />

    <com.plywet.mm.ui.MMImageButton
        android:id="@+id/title_btn1"
        style="@style/MMTitleButton"
        android:background="@drawable/mm_title_btn_right"
        android:focusable="true" />

</LinearLayout>